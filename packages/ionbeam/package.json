{
  "name": "ionbeam",
  "version": "1.0.0-alpha.6",
  "description": "A pure React SSR framework with automatic asset hashing and CSS modules",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "bin": {
    "ionbeam": "./bin/ionbeam.js"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./server": {
      "types": "./dist/server/index.d.ts",
      "import": "./dist/server/index.js"
    },
    "./utils": {
      "types": "./dist/utils/manifest.d.ts",
      "import": "./dist/utils/manifest.js"
    },
    "./config/tsconfig.json": "./config/tsconfig.json",
    "./types": {
      "types": "./types/index.d.ts"
    }
  },
  "files": [
    "dist",
    "config",
    "types",
    "bin"
  ],
  "scripts": {
    "build": "tsc",
    "prepublishOnly": "npm run build"
  },
  "keywords": [
    "react",
    "ssr",
    "framework",
    "server-side-rendering",
    "css-modules"
  ],
  "author": {
    "name": "Martin Podlouck√Ω",
    "email": "podlouckymartin@gmail.com"
  },
  "license": "MIT",
  "dependencies": {
    "@rollup/plugin-node-resolve": "^16.0.3",
    "@rollup/plugin-typescript": "^12.3.0",
    "chokidar": "^4.0.3",
    "commander": "^12.1.0",
    "express": "^5.2.1",
    "glob": "^13.0.0",
    "postcss": "^8.5.6",
    "postcss-modules": "^6.0.1",
    "react": "^19.2.3",
    "react-dom": "^19.2.3",
    "rollup": "^4.54.0",
    "rollup-plugin-postcss": "^4.0.2",
    "tslib": "^2.8.1",
    "typescript": "^5.9.3"
  },
  "devDependencies": {
    "@types/express": "^5.0.6",
    "@types/node": "^20.4.2",
    "@types/react": "^19.2.7",
    "@types/react-dom": "^19.2.3"
  }
}
